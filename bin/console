#!/usr/bin/env ruby
# frozen_string_literal: true

# Debug console for easy_ai
# Usage: bin/console

require "bundler/setup"
require "irb"

$LOAD_PATH.unshift File.expand_path("../lib", __dir__)
require "easy_ai"

# Pre-load commonly used modules for convenience
include EasyAI

# Print welcome message
puts "EasyAI Debug Console"
puts "=" * 50
puts "Loaded modules:"
puts "  - EasyAI (main namespace)"
puts "  - EasyAI::Tokenizers (WordBpe, ByteBpe, QwenBpe)"
puts "  - EasyAI::Data (TextDataset, Batcher)"
puts "  - EasyAI::Models (GPT)"
puts "  - EasyAI::Trainers (Trainer)"
puts "  - EasyAI::Logger (logging utilities)"
puts ""
puts "Examples:"
puts "  tokenizer = EasyAI::Tokenizers::WordBpe.new"
puts "  tokenizer.train(\"hello world\")"
puts "  tokenizer.encode(\"hello\")"
puts ""
puts "Press Ctrl+D or type 'exit' to quit"
puts "=" * 50

# Configure IRB
IRB.start(__FILE__)
